  "devDependencies": {
    "@types/jest": "^22.1.3",
    "@types/node": "^9.4.6",
    "jest": "^22.4.2",
    "nodemon": "^1.17.1",
    "ts-jest": "^22.4.0",
    "ts-node": "^5.0.0",
    "typescript": "^2.7.2"
  }
